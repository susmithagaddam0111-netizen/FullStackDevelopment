--- functions 
--1.single row functions ,2.multirow function
select Abs(-11)
select ename,emp1no, abs(sal-1000) as new_sal from emp1 

select Square(12)
select ename,emp1no, square(deptno),abs(sal-1000)  from emp1 

select Sqrt(12)
select ename,emp1no, sqrt(sal) as new_sal from emp1 

--largest and nearest value
 select Ceiling(20.1)
 select Ceiling(20.2)

-- lowest and nearest value
select Floor(20.1)
select Floor(0.9)

select Round(1.235,1)
select Round(1.3465,3)
select Round(1.366,2)
select round(10.6,0)--11
select round(10.4,0)--10

--- STRING FUNCTIONS

select Ascii('a')
select ascii('A')
select ename,emp1no, ascii(ename) as new_name from emp1 
select Ascii('z')

select Char(65)
select Char(1)
select Char(1000)
select Char(69)
select Char(65)

select Left('my name is susmitha',10)
select right('my name is susmitha',10)
select left('@mamatha',3)
select ename,emp1no, left(ename,2) as new_name from emp1 
select ename,emp1no, right(ename,2) as new_name from emp1 


select Upper('my name is susmitha')
select lower('MY NAME IS SUSMITHA')

select len('susmitha')

--- print the ename of the employee where starting letter should be uppercase and remaining should be lower case
select upper(left(ename,1)) + lower(right(ename,len(ename)-1)) from emp1

--ltrim() = this is used to remove the leftside spaces (or)  leading spaces
select ('          sql')--          sql ( space will be displayed )
select ltrim('      sql')---sql( space is removed)

--rtrim() = this is used to remove the rightside spaces (or) trailing spaces
select('sql       ') --sql ( trailing spaces are neglected by default)
select rtrim('sql       ') --sql

--trim() = this is used to remove both  the leading spaces and trailing spaces
select trim('       sql       ') --sql

select replicate('vishaal',2)

select reverse('hello')

select replace('susmitha','s','a')

select stuff('susmitha',2,2,'x')

select CHARINDEX('s','susmitha')

select stuff(ename,charindex('a',ename),1,'x')from emp1

select stuff(ename,charindex('a',ename,charindex('a',ename)+1),1,'x') from emp1

select patindex('%h','susmitha')
select patindex('%tha','susmitha')
select patindex('s%a','susmitha')
select patindex('s%t','susmitha')

select ename + Space(2) + job from emp1

select concat(ename,Space(2), emp1no,space(3),job) from emp1 

 select Concat_Ws(Space(2),ename,emp1no,job) from emp1
